<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <title>Artistas</title>
    <link rel="stylesheet" href="/css/index.css" />
    <link rel="shortcut icon" href="/img/spotifyLogo.png" type="image/x-icon">
</head>

<body>
    <h1>Artistas</h1>

    <nav>
        <a href="/amigos/novo">Cadastrar novo Artista</a> |
        <a href="/jogos">Ver Musicas</a> |
        <a href="/relatorioArtistas.pdf">Gerar Relatório de Artistas</a>
    </nav>
    <div class="tabela-container">
        <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Gênero</th>
                <th>Ações</th>
            </tr>
        </thead>

        <tbody>
            <% amigos.forEach(a => { %>
                <tr>
                    <td class="itemlista id"><%= a.id %></td>
                    <td class="itemlista"><%= a.nome %></td>
                    <td class="itemlista"><%= a.Gênero %></td>
                    <td class="itemlista acoes">
                        <a href="/amigos/editar/<%= a.id %>" class="editar">Editar</a>

                        <form 
                            action="/amigos/excluir/<%= a.id %>" 
                            method="POST" 
                            style="display:inline;"
                        >
                            <button class="excluir" type="submit">Excluir</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>
</body>
</html>
