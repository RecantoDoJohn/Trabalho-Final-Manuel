<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8" />
    <title>Nova Playlist</title>
    <link rel="stylesheet" href="/css/novo.css" />
    <link rel="shortcut icon" href="/img/spotifyLogo.png" type="image/x-icon">
</head>

<body>
    <div class="containerGrande">
        <div class="img">
            <img src="/img/xtranho.gif" alt="spotify" />
        </div>
    <div class="form-container">

        <form action="/emprestimos/novo" method="POST">
            <h2>Registrar Playlist</h2>
            <p>
                <label>Jogo:</label><br />
                <select name="jogoId" required>
                    <% jogos.forEach(j => { %>
                        <option value="<%= j.id %>">
                            <%= j.titulo %> (<%= j.plataforma %>)
                        </option>
                    <% }) %>
                </select>
            </p>

            <p>
                <label>Amigo que pegou:</label><br />
                <select name="amigoId" required>
                    <% amigos.forEach(a => { %>
                        <option value="<%= a.id %>">
                            <%= a.nome %> (<%= a.email %>)
                        </option>
                    <% }) %>
                </select>
            </p>

            <p>
                <label>Data de in√≠cio:</label><br />
                <input 
                    type="date"
                    name="dataInicio" 
                    required 
                />
            </p>

            <p>
                <label>Data de fim (opcional):</label><br />
                <input 
                    type="date"
                    name="dataFim" 
                />
            </p>

            <p class="acoes">
                <button type="submit" class="salvar">Salvar</button>
                <a href="/emprestimos" class="cancelar">Cancelar</a>
            </p>
            
            <div class="spotify-logo">
                <img src="/img/spotifyLogoWhite.png" alt="Spotify" class="spotifyLogoWhite">
            </div>

        </form>
    </div>
    </div>
</body>
</html>